<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.caitou.dao.ITimelineDao">

	<insert id="insertTimeline">
		INSERT INTO T_Timeline (user_id, essay_id, create_time)
		VALUES (#{userId}, #{essayId}, #{createTime})
	</insert>
	
	<delete id="deleteByEssayId">
		DELETE FROM T_Timeline
		WHERE essay_id = #{essayId}
	</delete>

	<select id="queryByUserId" resultType="Timeline">
		SELECT
		<include refid="columns" />
		FROM T_Timeline WHERE user_id = #{userId}
		ORDER BY id DESC
	</select>

	<sql id="columns">
		id,user_id,essay_id,create_time
	</sql>
</mapper> 